<section role="dialog" id="event-category-dialog" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
    <header class="aui-dialog2-header">
        <h2 class="aui-dialog2-header-main">Event Category Configuration</h2>
    </header>
    <div class="aui-dialog2-content">
        <form class="aui" id="event-category-configuration" action="#" method="post">
            <div class="field-group" id="categories-name-group">
                <label for="category-name">Name<span class="aui-icon icon-required">(required)</span></label>
                <input id="category-name" name="category-name" type="text">

                <div class="description" id="category-name-description">Name of the Domain.</div>
            </div>
            <div class="field-group" id="category-description-group">
                <label for="category-description">Description</label>
                <input id="category-description" name="category-description" type="text">

                <div class="description" id="category-description-description">Description of the Domain.</div>
            </div>
        </form>
    </div>
    <footer class="aui-dialog2-footer">
        <div class="aui-dialog2-footer-actions">
            <button id="event-category-dialog-cancel-button" class="aui-button">Cancel</button>
            <button id="event-category-dialog-save-button" class="aui-button aui-button-primary" type="submit">Save
            </button>
        </div>
    </footer>
</section>