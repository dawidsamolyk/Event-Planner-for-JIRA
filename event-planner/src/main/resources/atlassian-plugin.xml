<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/icons/projects/event-organization-plan-project-icon.png</param>
        <param name="plugin-logo">images/icons/projects/event-organization-plan-project-icon.png</param>
    </plugin-info>

    <ao key="active-objects">
        <entity>edu.uz.jira.event.planner.database.active.objects.model.Plan</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.Domain</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.Task</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.SubTask</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.Component</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.relation.PlanToComponentRelation</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.relation.PlanToDomainRelation</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.relation.TaskToComponentRelation</entity>
        <entity>edu.uz.jira.event.planner.database.active.objects.model.relation.SubTaskToTaskRelation</entity>
    </ao>

    <resource type="i18n" name="i18n" location="event-planner"/>
    <resource type="download" name="predefined-event-plans" location="/database/predefined-event-plans.xml"/>

    <component-import key="i18nResolver" interface="com.atlassian.sal.api.message.I18nResolver"/>
    <component-import key="templateRenderer" interface="com.atlassian.templaterenderer.TemplateRenderer"/>
    <component-import key="activeObjectsService" interface="com.atlassian.activeobjects.external.ActiveObjects"/>
    <component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager"/>
    <component-import key="loginUriProvider" interface="com.atlassian.sal.api.auth.LoginUriProvider"/>
    <component-import key="transactionTemplate" interface="com.atlassian.sal.api.transaction.TransactionTemplate"/>

    <component key="transaction" class="com.atlassian.activeobjects.external.TransactionalAnnotationProcessor"/>
    <component key="event-plan-service" class="edu.uz.jira.event.planner.database.active.objects.ActiveObjectsService"/>

    <rest key="rest" path="/event-plans" version="1.0">
        <description>Provides REST resources for the plugin.</description>
    </rest>

    <servlet name="Event Plans Configuration" class="edu.uz.jira.event.planner.project.plan.servlet.EventPlanServlet"
             key="event-plans-configuration">
        <url-pattern>/event/plans/configuration</url-pattern>
    </servlet>

    <web-resource name="Event Plans Configuration Resources" key="event-plans-configuration-resources">
        <description key="event.plans.config.resources">Resources for Event Plans Configuration admin UI</description>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:dialog2</dependency>
        <dependency>com.atlassian.auiplugin:ajs-flag</dependency>
        <dependency>com.atlassian.auiplugin:aui-form-validation</dependency>
        <resource type="velocity" name="event-plans-view" location="/templates/admin/event-plans.vm"/>
        <resource type="download" name="component.js" location="/templates/admin/model/component.js"/>
        <resource type="download" name="domain.js" location="/templates/admin/model/domain.js"/>
        <resource type="download" name="plan.js" location="/templates/admin/model/plan.js"/>
        <resource type="download" name="plans-list.js" location="/templates/admin/model/plans-list.js"/>
        <resource type="download" name="subtask.js" location="/templates/admin/model/subtask.js"/>
        <resource type="download" name="task.js" location="/templates/admin/model/task.js"/>
        <resource type="download" name="rest-manager.js" location="/templates/admin/rest-manager.js"/>
        <resource type="download" name="button-listener.js" location="/templates/admin/button-listener.js"/>
        <context>atl.general</context>
        <context>atl.admin</context>
    </web-resource>

    <web-item key="event_plans" name="Event Organization Plans Link" i18n-name-key="event.plans.admin.name"
              section="admin_project_menu/project_section" weight="40">
        <description>Link to Event Organization Plans Configuration page.</description>
        <label key="event.plans.admin.label"/>
        <link linkId="event_plans">/plugins/servlet/event/plans/configuration</link>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.UserIsAdminCondition"/>
    </web-item>

    <web-resource key="event-plan-project-resources" name="Event Organization Plan Project Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <transformation extension="soy">
            <transformer key="soyTransformer"/>
        </transformation>
        <resource type="download" name="EventOrganizationProject.soy.js" location="/soy/EventOrganizationProject.soy"/>
        <resource type="download" name="EventOrganizationProject.css" location="/style/EventOrganizationProject.css"/>
        <resource type="download" name="images/" location="/images">
            <param name="content-type" value="image/png; charset=binary"/>
        </resource>
        <context>atl.general</context>
        <context>atl.admin</context>
    </web-resource>

    <project-blueprint key="event-planner-project" weight="90">
        <label key="project.name"/>
        <description key="project.description"/>
        <longDescription key="project.description.long"/>
        <icon location="images/icons/projects/event-organization-plan-project-icon.png"/>
        <infoPage soy-template="edu.uz.jira.event.planner.project.renderEventOrganizationProjectExplanation"/>
        <add-project>
            <hook class="edu.uz.jira.event.planner.project.EventOrganizationProjectHook"/>
            <descriptor file="/config/event-organization-project-config.json"/>
        </add-project>
        <component-import key="workflow-transition-service"
                          interface="com.atlassian.jira.bc.workflow.WorkflowTransitionService"/>
    </project-blueprint>

    <web-panel name="DueDateIndicator" i18n-name-key="due.date.indicator.name" key="due-date-indicator"
               location="atl.jira.view.issue.right.context" weight="1000">
        <description key="due.date.indicator.description">The Issue Due Date Indicator Plugin</description>
        <context-provider class="edu.uz.jira.event.planner.project.issue.DueDateIndicator"/>
        <resource name="view" type="velocity" location="templates/issuepage/due-date-indicator.vm"/>
        <label key="due.date.indicator.title"/>
    </web-panel>

    <webwork1 key="event-organization-config-webwork" name="Event Organization Plan Webworks"
              i18n-name-key="event.organization.webwork.name">
        <description key="event-organization-config-webwork-description">The Event Organization Configuration Webwork
            Plugin
        </description>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:dialog2</dependency>
        <actions>
            <action name="edu.uz.jira.event.planner.project.configuration.webwork.EventPlanConfigurationAction"
                    alias="EventOrganizationPlanConfiguration">
                <view name="success">/templates/webworks/event/config/success.vm</view>
                <view name="input">/templates/webworks/event/config/input.vm</view>
                <view name="error">/templates/webworks/event/config/error.vm</view>
            </action>
            <action name="edu.uz.jira.event.planner.util.webwork.AlwaysShowInputAction"
                    alias="DeleteEventOrganizationPlan">
                <view name="input">/templates/admin/webworks/delete.vm</view>
            </action>
            <action name="edu.uz.jira.event.planner.util.webwork.AlwaysShowInputAction"
                    alias="EditEventOrganizationPlan">
                <view name="input">/templates/admin/webworks/edit.vm</view>
            </action>
            <action name="edu.uz.jira.event.planner.util.webwork.AlwaysShowInputAction"
                    alias="ViewEventOrganizationPlan">
                <view name="input">/templates/admin/webworks/view.vm</view>
            </action>
        </actions>
    </webwork1>

    <web-resource name="Event Plan Configuration Resources" key="event-plan-configuration-resources">
        <description key="event.plans.config.resources">Resources for Event Organization Plan Configuration
        </description>
        <dependency>com.atlassian.auiplugin:ajs-flag</dependency>
        <dependency>com.atlassian.auiplugin:aui-form-validation</dependency>
        <resource type="download" name="jquery.datetimepicker.full.min.js"
                  location="/libs/jquery/datepicker/js/jquery.datetimepicker.full.min.js"/>
        <resource type="download" name="jquery.datetimepicker.full.min.css"
                  location="/libs/jquery/datepicker/css/jquery.datetimepicker.full.min.css"/>
        <resource type="download" name="input.js" location="/templates/webworks/event/config/input.js"/>
        <context>atl.general</context>
        <context>atl.admin</context>
    </web-resource>

    <workflow-validator key="issue-due-date-validator" name="Issue Due Date Validator"
                        i18n-name-key="issue.due.date.validator.name"
                        class="edu.uz.jira.event.planner.workflow.validators.WorkflowNoInputValidatorFactory">
        <description key="issue.due.date.validator.description">Validates that Issue Due Date is not after Project Due
            Date. No parameters are required.
        </description>
        <validator-class>edu.uz.jira.event.planner.workflow.validators.IssueDueDateValidator</validator-class>
        <resource type="velocity" name="view" location="templates/validators/issue-due-date-validator.vm"/>
    </workflow-validator>

    <servlet name="Event Plan Timeline Servlet" i18n-name-key="event.plan.timeline.servlet.name"
             key="event-plan-timeline-servlet"
             class="edu.uz.jira.event.planner.timeline.servlet.EventPlanTimelineServlet">
        <description key="event.plan.timeline.servlet.description">The Event Plan Timeline Servlet Plugin</description>
        <url-pattern>/event/plan/time-line</url-pattern>
    </servlet>

    <web-resource name="Event Plan TimeLine Resources" key="event-plan-timeline-resources">
        <description key="event.plan.timeline.resources">Resources for Event Plan TimeLine UI</description>
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:ajs-flag</dependency>
        <dependency>com.atlassian.gadgets.dashboard:dashboard</dependency>
        <resource type="velocity" name="view" location="/templates/timeline/view.vm"/>
        <resource type="download" name="time-line.js" location="/templates/timeline/time-line.js"/>
        <resource type="download" name="time-line-dates-creator.js"
                  location="/templates/timeline/time-line-dates-creator.js"/>
        <resource type="download" name="time-line-tasks-creator.js"
                  location="/templates/timeline/time-line-tasks-creator.js"/>
        <resource type="download" name="task-gadget-creator.js"
                  location="/templates/timeline/task-gadget-creator.js"/>
        <resource type="download" name="date-util.js" location="/templates/timeline/date-util.js"/>
        <resource type="download" name="time-line-buttons-listener.js"
                  location="/templates/timeline/time-line-buttons-listener.js"/>
        <resource type="download" name="time-line-info.js"
                  location="/templates/timeline/time-line-info.js"/>
        <resource type="download" name="weeks-calculator.js" location="/templates/timeline/weeks-calculator.js"/>
        <resource type="download" name="time-line-navigation-buttons.js"
                  location="/templates/timeline/time-line-navigation-buttons.js"/>
        <resource type="download" name="rest-manager.js" location="/templates/admin/rest-manager.js"/>
        <context>atl.general</context>
        <context>atl.admin</context>
    </web-resource>

    <web-item key="my_links_link" name="Event Organization Time Line" i18n-name-key="event.plan.timeline.menu.name"
              section="system.top.navigation.bar" weight="50">
        <label>TimeLine</label>
        <link linkId="event_organization_time_line">/plugins/servlet/event/plan/time-line?project=$project</link>
        <condition class="edu.uz.jira.event.planner.timeline.condition.ShowTimeLineButtonCondition"/>
    </web-item>
</atlassian-plugin>
